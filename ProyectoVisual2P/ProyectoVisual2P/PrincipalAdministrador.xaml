<Window x:Name="frmPrincipalAdministrador" x:Class="PrincipalAdministrador"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Principal Administrador" Height="500" Width="750" WindowStartupLocation="CenterScreen" Icon="Resources/Icono.png" Background="#FFFFFAEE" MinWidth="750" MinHeight="500" MaxWidth="750" MaxHeight="500">
    <Grid>
        <Menu x:Name="mnPrincipalAdministrador" Height="22" VerticalAlignment="Top">
            <MenuItem x:Name="mniListadoProductos" Header="Listado de Productos"/>
            <MenuItem x:Name="mniListadoClientes" Header="Listado de Clientes"/>
            <MenuItem x:Name="mniListadoUsuario" Header="Listado de Usuarios"/>
            <MenuItem x:Name="mniIvaProv" Header="Listado de Iva por Provincia"/>
            <MenuItem x:Name="mniAyuda" Header="Ayuda"/>
            <MenuItem x:Name="mniSalir" Header="Salir"/>
        </Menu>
        <DataGrid x:Name="dtgListadoGeneral" Margin="10,51,10,10" ItemsSource="{Binding Factura}"/>
        <Label x:Name="lblGeneral" Content="Listado General de Facturas" Margin="231,23,211,0" FontWeight="Bold" Height="23" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
