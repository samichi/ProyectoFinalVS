<Window x:Name="frmIvaProvincias" x:Class="IvaXProvincia"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Listado de Iva por Provincia" Height="400" Width="385" WindowStartupLocation="CenterScreen" Icon="Resources/Icono.png" Background="#FFFFFAEE" MinWidth="385" MinHeight="400" MaxWidth="385" MaxHeight="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="57"/>
        </Grid.ColumnDefinitions> 
        <DataGrid x:Name="dtgIva" Margin="10,10,0,10" HorizontalAlignment="Left" Width="300" ItemsSource="{Binding Provincias}"/>
        <Button x:Name="btnSalir" Width="40" Height="40" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Column="1" Margin="8,0,9,14" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <Image Source="Resources/Out.png" HorizontalAlignment="Center"></Image>
            </StackPanel>
        </Button>

    </Grid>
</Window>
